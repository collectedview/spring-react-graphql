schema {
  query: Query
}

type Query {
  allAuthors: [Author]
  allBlogs: [Blog]
  allCountries: [Country]
  blogByTitle(title: String!): [Slug]
}

type Author {
	id: ID!
	name: String!
}

type Blog {
	id: ID!
	title: String!
	description: String!
	author: Author
}

type Country {
	id: ID!
	name: String!
	address: String!
	phone: String!
}

